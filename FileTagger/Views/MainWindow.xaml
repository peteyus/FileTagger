<RibbonWindow x:Class="FileTagger.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:menu="clr-namespace:FileTagger.Views.Menu"
              mc:Ignorable="d"
              Title="FileTagger" Height="450" Width="800"
              DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Ribbon and menu definition -->
        <menu:Ribbon Grid.Row="0" DataContext="{Binding Ribbon}" />
        
        <TextBlock Grid.Row="1" Text="{Binding WorkingPath}" />
    </Grid>
</RibbonWindow>
